sub isXivVolExists($$) {
	my $xiv = shift ;		chomp $xiv ;
	my $volume = shift ;		chomp $volume ;
	Info ("Checking if Volume $volume exists on XIV Box $xiv \n");
	my $cmd = "xcli -c $xiv vol_list vol=$volume  | grep -w $volume" ;
	my $ExitCode = RunProgram($main::RunnigHost, "$cmd") ;
	return $ExitCode;
}

